pipeline {
    agent any
    
    tools {
        maven 'maven'
    }
    
    stages {
        stage("Clean up") {
            steps {
                deleteDir()
            }
        }
        
        stage("Clone repo") {
            steps {
                // Utiliser bat au lieu de sh pour Windows
                bat "git clone https://github.com/raja987654/ex1spring.git"
            }
        }
        
        stage("Generate backend image") {
            steps {
                // Utiliser dir pour entrer dans le bon r√©pertoire
                dir("ex1spring") {  // Assurez-vous que c'est le bon nom du dossier
                    bat "mvn clean install"
                    bat "docker build -t docexp1-spring ."
                }
            }
        }
        
        stage("Run docker Compose") {
            steps {
                dir("ex1spring") {
                    bat "docker compose up -d"
                }
            }
        }
    }
}
